<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Myinfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/top"
        tools:ignore="DuplicateIds,MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31.62dp"
            android:gravity="center"
            android:text="個人檔案"
            android:textColor="#F3BA55"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top">
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/uPhoto"
                android:layout_width="68dp"
                android:layout_height="82dp"
                android:layout_marginLeft="49.52dp"
                android:layout_marginTop="22.86dp"
                android:src="@drawable/myinfo_color"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/uName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140.95dp"
                android:layout_marginTop="22.86dp"
                android:text="使用者名稱"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/uTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140.95dp"
                android:layout_below="@id/uName"
                android:text="稱號"
                android:textColor="#100F0F"
                android:textSize="15sp"/>
            <ImageButton
                android:id="@+id/diamond"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_below="@id/uTitle"
                android:layout_marginLeft="140.95dp"
                android:scaleType="centerCrop"
                android:background="#00000000"
                android:src="@drawable/diamond"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/uTitle"
                android:layout_toRightOf="@+id/diamond"
                android:background="#D9D9D9">
                <TextView
                    android:id="@+id/diamond_number"
                    android:layout_width="60.95dp"
                    android:layout_height="26dp"
                    android:gravity="center_vertical|right"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <ImageButton
                    android:id="@+id/addDiamond"
                    android:layout_width="26.66dp"
                    android:layout_height="26.66dp"
                    android:layout_toRightOf="@id/diamond_number"
                    android:background="#00000000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus_black" />
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:layout_marginTop="20.95dp"
            android:background="#D9D9D9"/>

        <!--EX經驗值-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp">
            <TextView
                android:id="@+id/EX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36.57dp"
                android:layout_centerVertical="true"
                android:text="EX"
                android:textColor="#F3BA55"
                android:textColorLink="#F3BA55"
                android:textSize="13.33dp"
                android:textStyle="bold"/>

            <ProgressBar
                android:id="@+id/exp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="304.76dp"
                android:layout_height="19.04dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11.43dp"
                android:layout_toRightOf="@+id/EX"
                android:indeterminate="false"
                android:max="100"
                android:maxHeight="16dip"
                android:progressTint="#F3BA55"
                android:scrollbarSize="100dp" />
            <TextView
                android:id="@+id/EX_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="經驗值"
                android:textSize="13.33dp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <View
            android:id="@+id/line"
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
    </LinearLayout>
    <!--    <ScrollView-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/linearLayout"-->
    <!--        tools:ignore="MissingConstraints">-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp">
            <ImageView
                android:id="@+id/time"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/time"
                android:visibility="visible"/>
            <!--我的推播-->
            <Button
                android:id="@+id/push"
                android:layout_width="match_parent"
                android:layout_height="51.42dp"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="70.48dp"
                android:text="我的推播"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp">
            <ImageView
                android:id="@+id/reward"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/reward"
                android:visibility="visible"/>
            <!--我的稱號-->
            <Button
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="51.42dp"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="70.48dp"
                android:text="我的稱號"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/star"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/star"
                android:visibility="visible"/>
            <!--我的推播-->
            <Button
                android:id="@+id/follow"
                android:layout_width="match_parent"
                android:layout_height="51.42dp"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="70.48dp"
                android:text="我的追蹤"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp">
            <ImageView
                android:id="@+id/list"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/list"
                android:visibility="visible"/>
            <!--我的推播-->
            <Button
                android:id="@+id/mission"
                android:layout_width="match_parent"
                android:layout_height="51.42dp"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="70.48dp"
                android:text="每日任務"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp">
            <ImageView
                android:id="@+id/set"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/set"
                android:visibility="visible"/>
            <!--我的推播-->
            <Button
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="51.42dp"
                android:layout_centerInParent="true"
                android:background="#00000000"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:paddingLeft="70.48dp"
                android:text="設定"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#F1F1F1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:background="#00ffffff"
            android:text="登出"
            android:textColor="#FF4A4A"
            android:textColorHighlight="#000000"
            android:textColorLink="#000000"
            android:textSize="15.24sp"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
    </LinearLayout>
    <!--    </ScrollView>-->

    <!--標籤頁-->
    <RelativeLayout
        android:id="@+id/under_label"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1.90dp"
                android:background="#E5E5E5"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/under_home"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/home" />

                <ImageButton
                    android:id="@+id/under_tag"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/tag" />

                <ImageButton
                    android:id="@+id/under_plus"
                    android:layout_width="53.33dp"
                    android:layout_height="53.33dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus" />

                <ImageButton
                    android:id="@+id/under_collect"
                    android:layout_width="55dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/collect" />

                <ImageButton
                    android:id="@+id/under_myinfo"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/myinfo_color" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>