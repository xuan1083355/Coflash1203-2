<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51.42dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="34.28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/diamond"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/diamond_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="50"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/diamond_addvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(首次儲值+50)"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ACABAB"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_rounde"
            android:text="NT$30"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.90dp"
        android:background="#D9D9D9"/>
</LinearLayout>