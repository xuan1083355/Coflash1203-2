<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="247dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/plus_rounde">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plus_rounde"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:autoSizeMaxTextSize="48sp"
        android:autoSizeTextType="uniform"
        android:background="#25000000"
        android:paddingLeft="32.38dp"
        android:paddingTop="96dp"
        android:paddingRight="32.38dp"
        android:paddingBottom="96dp"
        android:shadowColor="#50000000"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦哦"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imb_classify"
        android:layout_width="41.90dp"
        android:layout_height="41.90dp"
        android:layout_gravity="center"
        android:background="#00000000"
        android:src="@drawable/img_food" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_tag"
        android:layout_width="278.1dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.14dp"
        android:layout_marginLeft="41.90dp"
        android:orientation="horizontal"
        android:text="TV2"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_rightradius">
        <ImageView
            android:id="@+id/gps"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:src="@drawable/address" />
        <TextView
            android:id="@+id/push_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="400公尺"
            android:textColor="#DBA602"
            android:textSize="17dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="|"
            android:textColor="#DBA602"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:text="即日起~2022/12/31"
            android:textColor="#DBA602"
            android:textSize="17dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="ID"
        android:visibility="gone"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7.62dp"
        android:layout_marginBottom="37dp">
        <TextView
            android:id="@+id/tv_addAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pushlist_tv_add"
            android:padding="2dp"
            android:text="付費廣告"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/id"
            android:text="hh:mm:ss"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="7.62dp"
        android:layout_marginBottom="7.62dp"
        android:background="@drawable/plus_rounde"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp">

        <ImageView
            android:layout_width="19.04dp"
            android:layout_height="19.04dp"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="username"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/usertitle_round"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="usertitle"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV1"
        android:textColor="#00FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_marginBottom="7.62dp"
        android:layout_marginRight="7.62dp">

        <ImageView
            android:id="@+id/good"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toStartOf="@+id/good_num"
            android:layout_toLeftOf="@+id/bad"
            android:src="@drawable/good" />

        <TextView
            android:id="@+id/good_num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/bad"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bad" />

        <TextView
            android:id="@+id/bad_num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="15sp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="9.14dp"
        android:layout_marginRight="9.14dp"
        android:src="@drawable/heart" />


</RelativeLayout>