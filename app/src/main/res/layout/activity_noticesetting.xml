<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NoticeSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/top"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="19.05dp"
                android:layout_marginTop="33.9dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.62dp"
                android:gravity="center"
                android:text="通知設定"
                android:textColor="#F3BA55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="47.61dp"
            android:background="#F1F1F1"
            android:paddingLeft="22.86dp"
            android:paddingTop="22.85dp"
            android:text="通知種類"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47.61dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="22.86dp"
                android:text="通知五公里內之貼文"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/switch_distance"
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:checked="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47.61dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="22.86dp"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold"
                android:text="通知追蹤標籤之貼文"/>
            <Switch
                android:id="@+id/switch_tag"
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:checked="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47.61dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="22.86dp"
                android:text="當收藏之貼文即將到期時通知"
                android:textColor="@color/black"
                android:textSize="15.24sp"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/switch_time"
                android:layout_width="wrap_content"
                android:layout_height="47.61dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:checked="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>