<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".missionlist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/top"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="19.05dp"
                android:layout_marginTop="33.9dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.62dp"
                android:gravity="center"
                android:text="每日任務"
                android:textColor="#F3BA55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="收藏心心"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="收藏一則推播訊息"
                android:textSize="13sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="120dp"
                android:background="@drawable/btn_round_border">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/diamond" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#ADADAD"
                    android:text="5"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#50DF9A08">
                <Button
                    android:id="@+id/btn_collect"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="@drawable/btn_round_yellow"
                    app:backgroundTint="@null"
                    android:text="領取"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B68B40"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="0/1"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="推播大使"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="發布一則推播訊息"
                android:textSize="13sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="120dp"
                android:background="@drawable/btn_round_border">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/diamond" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#ADADAD"
                    android:text="5"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#50DF9A08">
                <Button
                    android:id="@+id/btn_post"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="@drawable/btn_round_yellow"
                    app:backgroundTint="@null"
                    android:text="領取"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0/1"
                    android:textColor="#B68B40"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76.19dp">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="好讚友"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="對一則推播訊息點擊讚或倒讚"
                android:textSize="13sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="120dp"
                android:background="@drawable/btn_round_border">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/diamond" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="#ADADAD"
                    android:text="5"
                    android:textSize="8sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#50DF9A08">
                <Button
                    android:id="@+id/btn_thumb"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:padding="0dp"
                    android:background="@drawable/btn_round_yellow"
                    app:backgroundTint="@null"
                    android:text="領取"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_thumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B68B40"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="0/1"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="380.95dp"
            android:layout_height="1.90dp"
            android:layout_marginLeft="15.24dp"
            android:background="#D9D9D9"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>