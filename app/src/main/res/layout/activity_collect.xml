<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Collect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/top"
            tools:ignore="DuplicateIds,MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.62dp"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="#F3BA55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RV"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>


    <!--標籤頁-->

    <RelativeLayout
        android:id="@+id/under_label"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1.90dp"
                android:background="#E5E5E5"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true">

                <ImageButton
                    android:id="@+id/under_home"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/home" />

                <ImageButton
                    android:id="@+id/under_tag"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/tag" />

                <ImageButton
                    android:id="@+id/under_plus"
                    android:layout_width="53.33dp"
                    android:layout_height="53.33dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/plus" />

                <ImageButton
                    android:id="@+id/under_collect"
                    android:layout_width="55dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/collect_color" />

                <ImageButton
                    android:id="@+id/under_myinfo"
                    android:layout_width="53.33dp"
                    android:layout_height="50.66dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:label="Home"
                    android:scaleType="centerInside"
                    android:src="@drawable/myinfo" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>