<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:id="@+id/top"
            tools:ignore="DuplicateIds,MissingConstraints">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="26.66dp"
                android:layout_height="26.66dp"
                android:layout_marginLeft="19.05dp"
                android:layout_marginTop="33.9dp"
                android:background="#00000000"
                android:scaleType="centerCrop"
                android:src="@drawable/back"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31.62dp"
                android:gravity="center"
                android:text="設定"
                android:textColor="#F3BA55"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="47.61dp"
            android:background="#F1F1F1"
            android:paddingLeft="22.86dp"
            android:paddingTop="22.85dp"
            android:text="帳號"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <Button
            android:id="@+id/accountSafety"
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="22.86dp"
            android:text="帳號安全"
            android:textColor="@color/black"
            android:textSize="15.24sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="47.61dp"
            android:background="#F1F1F1"
            android:paddingLeft="22.86dp"
            android:paddingTop="22.85dp"
            android:text="偏好設定"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <Button
            android:id="@+id/noticeSetting"
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="22.86dp"
            android:text="通知設定"
            android:textColor="@color/black"
            android:textSize="15.24sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="47.61dp"
            android:background="#F1F1F1"
            android:paddingLeft="22.86dp"
            android:paddingTop="22.85dp"
            android:text="關於Coflash"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <Button
            android:id="@+id/termOfUse"
            android:layout_width="match_parent"
            android:layout_height="51.42dp"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="22.86dp"
            android:text="使用條款"
            android:textColor="@color/black"
            android:textSize="15.24sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.90dp"
            android:background="#D9D9D9"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1F1F1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>